<h2>Sign up</h2>
<div class="border-form-div">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


    <%= f.text_field :first_name, autofocus: true, placeholder: 'First name' %>

    <%= f.text_field :last_name, autofocus: true, placeholder: 'Last name' %>


    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation' %>

    <%= f.submit "Sign up", class: 'btn btn-primary' %>
<% end %>
</div>

<%= render "devise/shared/links" %>
